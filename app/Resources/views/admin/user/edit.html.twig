{% extends 'admin/base_admin.html.twig' %}

{% block section %}
    <h2 class="text-center my-5">Modifier un licencié</h2>

    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 m-auto">
            {{ form_start(edit_form) }}
            <table class="table table-borderless">
                <tr>
                    <th scope="row"> {{ form_label(edit_form.email) }}</th>
                    <td> {{ form_widget(edit_form.email) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.fullname) }}</th>
                    <td> {{ form_widget(edit_form.fullname) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.staff) }}</th>
                    <td> {{ form_widget(edit_form.staff) }}</td>
                </tr>
            </table>
            <input type="submit" value="Modifier" class="d-block mx-auto mb-4"/>
            {{ form_end(edit_form) }}

            <ul>
                <li>
                    <a href="{{ path('list_users') }}">Retour à la liste des licenciés</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
