{% extends 'base.html.twig' %}

{% block body %}
    {% include 'default/header.html.twig' %}
    {% include 'default/nav.html.twig' %}

    <div class="container rounded">
        <div class="row justify-content-center">
            <section class="col-lg-9 text-center">
                <div class="row">
                    <div class="col-12 text-center w-50">
                        <h2 class="mt-3 text-center">Formulaire de contact</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-8 offset-md-8 m-auto">
                        {{ form_start(form) }}
                        <table class="table table-borderless">
                            <tr>
                                <th scope="row"> {{ form_label(form.lastname) }}</th>
                                <td> {{ form_widget(form.lastname) }}</td>
                            </tr>
                            <tr>
                                <th scope="row"> {{ form_label(form.firstname) }}</th>
                                <td> {{ form_widget(form.firstname) }}</td>
                            </tr>
                            <tr>
                                <th scope="row"> {{ form_label(form.email) }}</th>
                                <td> {{ form_widget(form.email) }}</td>
                            </tr>
                            <tr>
                                <th scope="row"> {{ form_label(form.phone) }}</th>
                                <td> {{ form_widget(form.phone) }}</td>
                            </tr>
                            <tr>
                                <th scope="row"> {{ form_label(form.question) }}</th>
                                <td> {{ form_widget(form.question) }}</td>
                            </tr>
                        </table>
                        <input type="submit" value="Envoyer" class="d-block mx-auto mb-4"/>
                        {{ form_end(form) }}
                        <p>* champs requis</p>
                    </div>
                </div>
            </section>
            {% include 'default/other.html.twig' %}
        </div>
    </div>

    {% include 'default/footer.html.twig' %}

    <div id="scrollUp">
        <a href="#top"><img src="/assets/images/to_top.png"/></a>
    </div>
{% endblock %}
