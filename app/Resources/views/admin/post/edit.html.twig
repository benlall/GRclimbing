{% extends 'admin/base_admin.html.twig' %}

{% block section %}
    <h2 class="text-center my-5">Modifier une news</h2>
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3 m-auto">
            {{ form_start(edit_form) }}
            <table class="table table-borderless">
                <tr>
                    <th scope="row"> {{ form_label(edit_form.title) }}</th>
                    <td> {{ form_widget(edit_form.title) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.content) }}</th>
                    <td> {{ form_widget(edit_form.content, { 'attr': {'cols': '40', 'rows':'10'}}) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.publicPost) }}</th>
                    <td> {{ form_widget(edit_form.publicPost) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.activePost) }}</th>
                    <td> {{ form_widget(edit_form.activePost) }}</td>
                </tr>
                <tr>
                    <th scope="row"> {{ form_label(edit_form.imgLink) }}</th>
                    <td> {{ form_widget(edit_form.imgLink) }}</td>
                </tr>
            </table>
            <input type="submit" value="Modifier" class="d-block mx-auto mb-4"/>
            {{ form_end(edit_form) }}

            <ul>
                <li>
                    <a href="{{ path('list_posts') }}">Revenir Ã  la liste des news</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
